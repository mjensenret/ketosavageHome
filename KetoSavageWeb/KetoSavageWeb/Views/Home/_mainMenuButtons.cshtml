
@Html.DevExpress().FormLayout(form =>
{
    form.Name = "frmMainMenu";
    form.SettingsAdaptivity.AdaptivityMode = FormLayoutAdaptivityMode.SingleColumnWindowLimit;
    form.SettingsAdaptivity.SwitchToSingleColumnAtWindowInnerWidth = 320;
    //form.Width = 700;
    form.NestedExtensionWidth = Unit.Percentage(75);
    form.Styles.Style.CssClass = "mainMenu";

    form.Items.AddGroupItem(i =>
    {
        i.ColCount = 2;
        i.ShowCaption = DefaultBoolean.False;
        i.GroupBoxDecoration = GroupBoxDecoration.None;
        if(ViewBag.IsCoachOrAdmin)
        {
            i.Items.Add(b =>
            {
                b.ShowCaption = DefaultBoolean.False;
                b.SetNestedContent(() =>
                {
                    Html.DevExpress().Button(bu =>
                    {
                        bu.Width = 300;
                        bu.Name = "btnEditUser";
                        bu.Text = "Manage Users";
                    }).Render();
                });
            });
            i.Items.Add(b =>
            {
                b.ShowCaption = DefaultBoolean.False;
                b.SetNestedContent(() =>
                {
                    Html.DevExpress().Button(bu =>
                    {
                        bu.Width = 300;
                        bu.Name = "btnUpdateMacros";
                        bu.Text = "Update User Macros";
                    }).Render();
                });
            });
            i.Items.Add(b =>
            {
                b.ShowCaption = DefaultBoolean.False;
                b.SetNestedContent(() =>
                {
                    Html.DevExpress().Button(bu =>
                    {
                        bu.Width = 300;
                        bu.Name = "btnManagePrograms";
                        bu.Text = "Manage Programs";
                    }).Render();
                });
            });
        }
        else
        {
            i.Items.Add(b =>
            {
                b.ShowCaption = DefaultBoolean.False;
                b.SetNestedContent(() =>
                {
                    Html.DevExpress().Button(bu =>
                    {
                        bu.Width = 300;
                        bu.Name = "btnMacros";
                        bu.Text = "Macros";
                        bu.ClientSideEvents.Click = "function(s, e) {redirectToMacros(); }";
                    }).Render();
                });
            });

            i.Items.Add(b =>
            {
                b.ShowCaption = DefaultBoolean.False;
                b.SetNestedContent(() =>
                {
                    Html.DevExpress().Button(bu =>
                    {
                        bu.Width = 300;
                        bu.Name = "btnWeighIn";
                        bu.Text = "Weigh In";
                        bu.ClientSideEvents.Click = "function(s, e) { redirectToWeighIn(); }";
                    }).Render();
                });
            });
        }


    });
}).GetHtml()

<script type="text/javascript">
    function redirectToMacros() {
        console.log("You've definitely hit the macros button");
        var url = "@Url.Action("Index", "UserProgress")";
        window.location.replace(url);
    }

    function redirectToWeighIn() {
        console.log("You hit the weigh in button");
    }
</script>