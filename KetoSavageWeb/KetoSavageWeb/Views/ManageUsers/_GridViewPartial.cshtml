@{ 
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "ManageUserGrid";
        settings.CallbackRouteValues = new { Controller = "ManageUsers", Action = "GridViewPartial" };
        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "ManageUsers", Action = "GridViewPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "ManageUsers", Action = "GridViewPartialEdit" };
        settings.Styles.AlternatingRow.Enabled = DefaultBoolean.True;
        settings.SettingsBehavior.AllowFixedGroups = true;
        settings.Settings.ShowGroupPanel = true;
        settings.SettingsBehavior.AllowFocusedRow = true;
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;
        settings.SettingsPager.FirstPageButton.Visible = true;
        settings.SettingsPager.LastPageButton.Visible = true;
        settings.SettingsPager.PageSizeItemSettings.Visible = true;
        settings.SettingsPager.PageSizeItemSettings.Items = new string[] { "10", "20", "50" };

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButtonInHeader = true;
        settings.CommandColumn.ShowEditButton = true;

        settings.KeyFieldName = "UserName";

        settings.Columns.Add(c =>
        {
            c.FieldName = "Id";
            c.Visible = false;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "UserName";
            c.VisibleIndex = 1;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "FirstName";
            c.VisibleIndex = 2;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "LastName";
            c.VisibleIndex = 3;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "Email";
            c.VisibleIndex = 4;
        });
        settings.Columns.Add(r =>
        {
            r.Visible = false;
            r.VisibleIndex = 5;
            r.FieldName = "SelectedRoleId";
            r.Caption = "Role";
            r.EditFormSettings.Visible = DefaultBoolean.True;
            r.ColumnType = MVCxGridViewColumnType.ComboBox;
            var combo = r.PropertiesEdit as ComboBoxProperties;
            combo.DataSource = ViewBag.RoleId;
            //combo.DataSource = Model.RolesList;

        });
        settings.Columns.Add(p =>
        {
            p.FieldName = "Password";
            p.Visible = false;
            p.VisibleIndex = 6;
            p.EditFormSettings.Visible = DefaultBoolean.True;

        });
        settings.Columns.Add(cp =>
        {
            cp.FieldName = "ConfirmPassword";
            cp.Visible = false;
            cp.VisibleIndex = 7;
            cp.EditFormSettings.Visible = DefaultBoolean.True;

        });
        settings.Columns.Add(r =>
        {
            r.FieldName = "Roles";
            r.Visible = true;
            r.VisibleIndex = 6;
            r.EditFormSettings.Visible = DefaultBoolean.False;

        });

    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()
