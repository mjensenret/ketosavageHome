@model KetoSavageWeb.ViewModels.ProgressGaugeViewModel

@(Html.DevExtreme().CircularGauge()
    .ID("progressGauge")
    .ValueIndicator(i => i
        .Type(GaugeIndicatorType.TriangleNeedle)
        .Color("#FF1111")
    )
    .Scale(s => s
        .StartValue(-50)
        .EndValue(50)
        .TickInterval(2)
        .Label(l => l.UseRangeColors(false))
    )
    .RangeContainer(c => c
        .Ranges(r =>
        {
            r.Add().StartValue(-50).EndValue(-25).Color("Red");
            r.Add().StartValue(-25).EndValue(25).Color("Green");
            r.Add().StartValue(25).EndValue(50).Color("Red");
        })
    )
    .Title(t => t
        .Text("Weigh-in Progress")
        .Font(f => f.Size(14).Color("White"))
    )
    .Export(e => e.Enabled(false))
    .Value(Model.actualWeight)
    .Subvalues(new double[] { Model.plannedWeight })
)
