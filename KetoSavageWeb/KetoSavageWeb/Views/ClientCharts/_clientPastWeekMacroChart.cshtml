@model IEnumerable<KetoSavageWeb.ViewModels.WeeklyMacroPieChart>
@(Html.DevExtreme().PieChart()
    .ID("actualMacroPie")
    //.Size(s => s.Width(300))
    .Palette(VizPalette.Bright)
    .Series(s => s
        .Add()
        .ArgumentField("macro")
        .ValueField("value")
        .Label(l => l
            .Visible(true)
            .Connector(c => c
                .Visible(true)
                .Width(1)
            )
            .Format(Format.Percent)
        )
    )
    .Legend(l => l
        .Orientation(DevExtreme.AspNet.Mvc.Orientation.Horizontal)
        .ItemTextPosition(Position.Bottom)
        .HorizontalAlignment(HorizontalAlignment.Center)
        .VerticalAlignment(VerticalEdge.Bottom)
    )
    .Title(t => t
        .Text("Actual Macros - Last week")
        .Font(f => f.Size(14).Color("White")
        )
    )
    .Export(e => e.Enabled(false))
    .OnPointClick(@<text>
        function (e) {
        var point = e.target;
        toggleVisibility(point);
        }
    </text>)
    .OnLegendClick(@<text>
            function (e) {
            var arg = e.target;
            toggleVisibility(this.getAllSeries()[0].getPointsByArg(arg)[0]);
            }
    </text>)
    .DataSource(Model)
)

<script>
    function toggleVisibility(item) {
        if(item.isVisible()) {
            item.hide();
        } else {
            item.show();
        }
    }
</script>
