@model IEnumerable<KetoSavageWeb.ViewModels.UserProgramDetails>
@using (Html.BeginForm("updateProgram", "UserPrograms", FormMethod.Post))
{

    var detailsGrid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "userDetailGrid";
        settings.CallbackRouteValues = new { Controller = "UserPrograms", Action = "UserProgramDetails" };
        settings.ClientSideEvents.BeginCallback = "OnDetailGridBeginCallback";
        settings.ClientSideEvents.EndCallback = "OnDetailGridEndCallback";
        settings.Width = Unit.Percentage(100);

        settings.KeyFieldName = "ProgramUserId";

        settings.Columns.Add(c =>
        {
            c.FieldName = "ProgramUserId";
            c.Visible = false;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "FullName";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "Notes";

        });
    }).Bind(Model).GetHtml();
}



