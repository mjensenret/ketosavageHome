@model KetoSavageWeb.ViewModels.UserProgramViewModel
@{
    ViewBag.Title = "User Programs";
}

@Html.Action("UserProgramList")
@*@Html.Partial("_userGridViewPartial")*@

@Html.DevExpress().PopupControl(settings =>
{
    settings.Name = "popup";
    settings.ShowMaximizeButton = true;
    settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
    settings.PopupVerticalAlign = PopupVerticalAlign.WindowCenter;
    settings.Modal = true;
    settings.Width = Unit.Pixel(800);
    settings.Height = Unit.Percentage(50);
    settings.SetContent(() =>
    {
        Html.RenderPartial("_userProgramDetails", null);
    });
}).GetHtml()
