
@Html.DevExpress().GridView(users =>
{
    users.Name = "gvUsers";
    users.CallbackRouteValues = new { Controller = "UsersAdmin", Action = "userGridPartialView" };
    users.KeyFieldName = "UserName";
    users.SettingsEditing.AddNewRowRouteValues = new { Controller = "Editing", Action = "EditAddNewUser" };
    users.SettingsEditing.UpdateRowRouteValues = new { Controller = "Editing", Action = "EditUpdateUser" };
    users.SettingsEditing.DeleteRowRouteValues = new { Controller = "Editing", Action = "EditDeleteUser" };
    users.SettingsEditing.Mode = GridViewEditingMode.PopupEditForm;
    users.SettingsBehavior.ConfirmDelete = true;
    users.SettingsPopup.EditForm.Width = 600;
    users.Width = Unit.Percentage(50);
    users.SettingsPager.PageSize = 50;
    users.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.HideDataCells;
    users.ControlStyle.Paddings.Padding = Unit.Pixel(0);
    users.ControlStyle.Border.BorderWidth = Unit.Pixel(0);
    users.ControlStyle.Paddings.PaddingTop = Unit.Pixel(10);
    users.SettingsBehavior.AllowFixedGroups = true;
    users.Settings.ShowGroupPanel = true;

    users.SettingsPopup.EditForm.SettingsAdaptivity.Mode = PopupControlAdaptivityMode.OnWindowInnerWidth;
    users.SettingsPopup.EditForm.SettingsAdaptivity.SwitchAtWindowInnerWidth = 768;
    users.EditFormLayoutProperties.SettingsAdaptivity.AdaptivityMode = FormLayoutAdaptivityMode.SingleColumnWindowLimit;
    users.EditFormLayoutProperties.SettingsAdaptivity.SwitchToSingleColumnAtWindowInnerWidth = 700;

    users.CommandColumn.Visible = true;
    users.CommandColumn.ShowNewButton = true;
    users.CommandColumn.ShowDeleteButton = true;
    users.CommandColumn.ShowEditButton = true;

    users.Columns.Add("UserName");
    users.Columns.Add("UserName");
    users.Columns.Add("FirstName");
    users.Columns.Add("LastName");
    users.Columns.Add("Email");
    users.Columns.Add("Roles");
}).Bind(Model).GetHtml()
